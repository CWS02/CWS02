@{
    Layout = "~/Views/Shared/_LayoutMember2.cshtml";
    ViewBag.Title = "係數計算";
}

<head>
    <link rel="stylesheet" href="~/css/style2.css" />
</head>

<div class="container" style="margin-top: 50px;">
    <h2 class="text-center">係數計算</h2>

    <form method="get" class="form-inline justify-content-center mb-4">
        <div class="form-group mr-5">
            <label for="startYear" class="mr-3">開始日期:</label>
            <input type="number" name="startYear" class="form-control" min="1900" max="2099" value="@Request.QueryString["startYear"]" placeholder="ex: 2024" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary btn-spacing" type="submit">搜索</button>
            <button class="btn btn-success btn-spacing" type="submit">係數設定</button>

        </div>
    </form>
</div>

<br />

    <div class="card">
        <div class="card-body">
            <div class="table-responsive" style="overflow-x: auto;">
                <table class="table table-striped table-bordered table-hover ">
                    <thead>
                        <tr>
                            <th>序</th>
                            <th>類別</th>
                            <th>項目</th>
                            <th>總電量</th>
                            <th>填充量(公斤)</th>
                            <th>係數</th>
                            <th>單位</th>
                            <th>公告年份</th>
                            <th>計算結果</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td></td>
                            <td></td>
