                $("#ELECTRICITY_SIGNAL").val("10-51-2918-75-7");
            } else if (FACTORY === "樹谷廠") {
                $("#ELECTRICITY_SIGNAL").val("10-51-2950-75-8");
            }
        });
    });
</script>


