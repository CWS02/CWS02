@model IEnumerable<prjWastes6.Models.SGS_Parameter>

@{
    Layout = "~/Views/Shared/_LayoutMember2.cshtml";
    ViewBag.Title = "細數表";
}

<head>
    <link rel="stylesheet" href="~/css/style2.css" />
</head>

<div class="container" style="margin-top: 50px;">
    <h2 class="text-center">細數表</h2>

    <form method="get" class="form-inline justify-content-center mb-4">
        <div class="form-group mr-5">
            <label for="startYear" class="mr-3">開始日期:</label>
            <input type="number" name="startYear" class="form-control" min="1900" max="2099" value="@Request.QueryString["startYear"]" placeholder="2024" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary btn-spacing" type="submit">搜索</button>
            <a class="btn btn-success btn-spacing" href="@Url.Action("SGS_ParameterEdit","Home")">新增細數</a>
        </div>
    </form>
</div>

<br />

<div class="card">
    <div class="card-body">
        <div class="table-responsive" style="overflow-x: auto;">
            <table class="table table-striped table-bordered table-hover ">
                <thead>
                    <tr>
                        <th>序</th>
                        <th>項目</th>
                        <th>細數</th>
                        <th>單位</th>
                        <th>公告年份</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @{
                            if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                     <td>@(Model.ToList().IndexOf(item) + 1)</td>
                                    <td>@item.PAR001</td>
                                    <td>@item.PAR002</td>
                                    <td>@item.PAR003</td>
                                    <td>@item.PAR004</td>
                                }
                            }
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
