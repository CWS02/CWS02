@model List<prjWastes6.Models.CoefficientLink>

@{
    Layout = "~/Views/Shared/_LayoutMember2.cshtml";
    ViewBag.Title = "係數外部連結";
}

<head>
    <link rel="stylesheet" href="~/css/style2.css" />
</head>

<div class="container mt-5">
    <h2 class="text-center mb-4">係數表設定</h2>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>序</th>
                            <th>名稱</th>
                            <th>連結</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.Url))
                                    {
                                        <a href="@Url.Content(item.Url)" target="_blank" rel="noopener noreferrer">
                                            @(item.Url.StartsWith("http") ? item.Url : System.IO.Path.GetFileName(item.Url))
                                        </a>
                                    }
                                    </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>