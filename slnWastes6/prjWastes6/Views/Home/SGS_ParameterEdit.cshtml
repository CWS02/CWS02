@{
    Layout = "~/Views/Shared/_LayoutMember2.cshtml";
    ViewBag.Title = "細數表";
}

<head>
    <link rel="stylesheet" href="~/css/style2.css" />
</head>

<div class="container" style="margin-top: 50px;">
    <h2 class="text-center">新增細數</h2>
</div>

<br />

<div id="app" class="container mt-5">
    <form action="@Url.Action("SGS_ParameterEdit", "Home")" method="post" enctype="multipart/form-data">

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="PAR001">項目</label>
                    <input type="text" class="form-control valid-ar-6" name="PAR001" required>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="PAR002">細數</label>
                    <input type="text" class="form-control valid-ar-6" name="PAR002" required>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="PAR003">單位</label>
                    <input type="text" class="form-control valid-ar-6" name="PAR003">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="PAR004">公告年份</label>
                    <input type="text" class="form-control valid-ar-6" name="PAR004">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12 text-center mt-3 mb-3">
                <button id="submitBtn" type="submit" class="btn btn-primary">提交</button>
            </div>
        </div>
    </form>
</div>
