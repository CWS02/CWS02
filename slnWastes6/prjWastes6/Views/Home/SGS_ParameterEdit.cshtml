@model prjWastes6.Models.SGS_Parameter
@{
    Layout = "~/Views/Shared/_LayoutMember2.cshtml";
    ViewBag.Title = "細數表";
}

<head>
    <link rel="stylesheet" href="~/css/style2.css" />
</head>

<div id="app" class="container" style="margin-top: 50px;">
    <!-- 使用 Vue 的動態綁定顯示標題 -->
    <h2 class="text-center">{{ isUpdate ? '編輯細數' : '新增細數' }}</h2>

    <form action="@Url.Action("SGS_ParameterEdit", "Home", new { IsUpdate = ViewBag.IsUpdate })" method="post" enctype="multipart/form-data">
        <!-- 隱藏 DEA000 欄位，並讓其與 Vue 進行綁定 -->
        <input type="hidden" name="PAR000" v-model="model.PAR000" />
        
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="PAR001">項目</label>
                    <input type="text" class="form-control valid-ar-6" name="PAR001" v-model="model.PAR001" required />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="PAR002">細數</label>
                    <input type="text" class="form-control valid-ar-6" name="PAR002" v-model="model.PAR002" required />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="PAR003">單位</label>
                    <input type="text" class="form-control valid-ar-6" name="PAR003" v-model="model.PAR003" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="PAR004">公告年份</label>
                    <input type="text" class="form-control valid-ar-6" name="PAR004" v-model="model.PAR004" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12 text-center mt-3 mb-3">
                <button id="submitBtn" type="submit" class="btn btn-primary">{{ isUpdate ? '更新' : '提交' }}</button>
            </div>
        </div>
    </form>
</div>

<script>
    new Vue({
        el: '#app',
        data: {
            model: @Html.Raw(Json.Encode(Model)),
            isUpdate: @((bool)ViewBag.IsUpdate ? "true" : "false"),
        }
    });
</script>
