            <th>
                @Html.DisplayNameFor(model => model.UNTIL_BILLING_PERIOD)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.PEAK_ELECTRICITY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HALF_SPIKE_POWER)
