@{
    Layout = null;
}
@using PagedList
@using PagedList.Mvc

@model IPagedList<prjWastes6.Models.CAT_THREE_EMPLOYEE_COMMUTING>

<div class="partial-view">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().USER_ID)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().USER_NAME)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().DEPARTMENT_NAME)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().TITLE_NAME)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().WORK_DATE)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().SHIFT_NAME)</th>
                </tr>
            </thead>

            <tbody>
                @{
                    int counter = 1;
                }

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@Html.DisplayFor(m => item.USER_ID)</td>
                        <td>@Html.DisplayFor(m => item.USER_NAME)</td>
                        <td>@Html.DisplayFor(m => item.DEPARTMENT_NAME)</td>
                        <td>@Html.DisplayFor(m => item.TITLE_NAME)</td>
                        <td>@Html.DisplayFor(m => item.WORK_DATE)</td>
                        <td>@Html.DisplayFor(m => item.SHIFT_NAME)</td>
                    </tr>

                    counter++;
                }
            </tbody>

        </table>

    </div>

    <div class="pagination">
        @Html.PagedListPager(Model, page => Url.Action("CAT_THREE_EMPLOYEE_COMMUTING_Index", new { page, userId = ViewBag.UserId, departmentName = ViewBag.DepartmentName, year = ViewBag.Year }))
    </div>
</div>
